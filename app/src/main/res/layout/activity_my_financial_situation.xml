<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myFinancialSituationLayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:background="#A77474">

    <LinearLayout
        android:id="@+id/myFinancialSituationTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bowlby_one_sc"
            android:text="My Financial Situation"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/myFinancialSituationGridLayout"
        android:layout_below="@id/myFinancialSituationTitleLayout"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins">

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/paytone_one"
            android:text="Total Earnings: "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalEarningsTextView"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/bowlby_one_sc"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/paytone_one"
            android:text="Monthly Earnings: "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/monthlyEarningsTextView"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/bowlby_one_sc"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/paytone_one"
            android:text="Annual earnings: "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/annualEarningsTextView"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/bowlby_one_sc"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </GridLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/myFinancialSituationGridLayout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:baselineAlignBottom="false"
            android:src="@drawable/earnings"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>